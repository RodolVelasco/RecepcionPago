{% extends "BenDoctorsBundle::layout.html.twig" %}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}
{% block body -%}
<h3><span class="glyphicon glyphicon-stats"></span> Línea de trabajo</h3>
<div class="row">
    <div class="col-md-10">   
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Código</th>
                <td>{{ entity.codigo }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
        </tbody>
    </table>

    </div>
    <div class="col-md-2">
        <form id="deleteForm" action="{{ path('linea_trabajo_delete', { 'id': entity.id }) }}" method="POST">
            <a class="btn btn-primary btn-block" href="{{ path('linea_trabajo') }}">Ver listado</a>
            <a class="btn btn-info btn-block" href="{{ path('linea_trabajo_edit', { 'id': entity.id }) }}">Editar</a>
            <a class="btn btn-info btn-block" id="btnPrint"><span class="glyphicon glyphicon-print"></span> Imprimir</a>
            <hr>
            <button class="btn btn-danger btn-block" type="submit">Eliminar</button>
            {{ form_widget(delete_form) }}
        </form> 
    </div>
</div>
{% endblock %}